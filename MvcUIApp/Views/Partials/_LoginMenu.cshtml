@if (User.Identity.IsAuthenticated)
{
        <ul class="navbar-nav ms-3">
         <li class="nav-item dropdown">
            <a class="nav-link mb-1 dropdown-bs-toggle" role="button"  data-bs-toggle="dropdown" aria-expanded="false">
                <img src='@User.FindFirstValue("Avatar")' width="40" height="40" class="img-fluid rounded" alt="">  
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">Action</a></li>
              @if(User.IsInRole("Admin"))
              {
                    <li><a asp-action="Index" asp-controller="Dashboard" asp-area="Admin" class="dropdown-item">Admin</a></li>
              }
              <li><hr class="dropdown-divider"></li>
              <li><a asp-action="Logout" asp-route-returnUrl="@Context.Request.PathAndQuery()" asp-controller="Account" class="dropdown-item text-danger">
                <i class="fa-solid fa-right-from-bracket me-2"></i>
                Logout</a></li>
            </ul>
          </li>
      </ul>
}
else
{
    <a data-toggle="tooltip" data-placement="top" title="Giriş Yap" asp-action="Login" asp-route-returnUrl="@Context.Request.PathAndQuery()" asp-controller="Account"
        class="my-auto me-4">
        <i class="fa-solid fa-right-to-bracket fa-2x"></i>
    </a>
        <a data-toggle="tooltip" data-placement="top" title="Kayıt Ol" asp-action="Register" asp-controller="Account"
        class="my-auto">
        <i class="fa-solid fa-user-plus fa-2x"></i>
    </a>
}
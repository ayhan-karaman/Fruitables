@model IEnumerable<Category>

<div class="mb-3">
    <h4>Kategoriler</h4>
    <ul class="list-unstyled fruite-categorie">
        <li class="">
                <div class="d-flex justify-content-between fruite-name">
                    <a class="@(ViewBag.CategoryId == null ? "text-warning" : "")" asp-controller="Product" asp-action="Index"><i class="fas fa-apple-alt me-2"></i>TÃ¼m Kategoriler</a>
                </div>
            </li>
        @foreach (var category in Model)
        {
            <li class="">
                <div class="d-flex justify-content-between fruite-name">
                    <a class="@(ViewBag.CategoryId == category.Id ? "text-warning" : "")" asp-action="Index"
                        asp-controller="Product" asp-route-categoryId="@category.Id"><i
                            class="fas fa-apple-alt me-2"></i>@category.Name</a>
                </div>
            </li>

        }

    </ul>
</div>
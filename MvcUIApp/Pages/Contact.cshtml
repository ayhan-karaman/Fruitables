@page "/getintouch"
@model MvcUIApp.Pages.Contact
@{
    ViewData["Title"] = "İletişim";
    ViewData["Path"] = "getintouch";
}
@section PageHeader
{
    <partial name="~/Views/Partials/_PageHeader.cshtml" />
}
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">İletişim Kurun</h1>
                        <p class="mb-4">İletişim formu şu anda etkin değil. 
                            İşlevsel ve çalışan bir iletişim kurun Ajax ve PHP ile birkaç dakika içinde forma girin. 
                            Sadece dosyaları kopyalayıp yapıştırın, küçük bir kod ekleyin ve Bitirdiniz.
                             <a href="https://htmlcodex.com/contact-form">Şimdi indirin</a>.</p>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="h-100 rounded">
                        <iframe class="rounded w-100" style="height: 400px;"
                         src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d385399.35213264456!2d28.682525897201224!3d41.00485193156033!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caa7040068086b%3A0xe1ccfe98bc01b0d0!2zxLBzdGFuYnVsLCBUw7xya2l5ZQ!5e0!3m2!1sen!2sbd!4v1704918480282!5m2!1sen!2sbd" 
                          loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                      
                    </div>
                </div>
                <div class="col-lg-7">
                    <form action="" class="">
                        <input type="text" class="w-100 form-control border-0 py-3 mb-4" placeholder="Adınız">
                        <input type="email" class="w-100 form-control border-0 py-3 mb-4"
                            placeholder="E-Postanızı Girin.">
                        <textarea class="w-100 form-control border-0 mb-4" rows="5" cols="10"
                            placeholder="Mesajınız..."></textarea>
                        <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary "
                            type="submit">Gönder</button>
                    </form>
                </div>
                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Adres</h4>
                            <p class="mb-2">123 Sokak İstanbul/TÜRKİYE</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Bize Mail Gönderin</h4>
                            <p class="mb-2">info@example.com</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Telefon</h4>
                            <p class="mb-2">(+90) 212 123 45 67</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
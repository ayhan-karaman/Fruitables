@model ProductDtoForUpdate
<div class="modal fade" id="updateProductModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Ürün Güncelle</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageUrl">
        <div class="modal-body">
          <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input type="text" asp-for="Name" class="form-control">
          </div>
          <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-items="@ViewBag.Categories" asp-for="CategoryId" class="form-control">
              <option selected disabled>Select Category</option>
            </select>
          </div>
          <div class="form-group">
            <label asp-for="UnitPrice" class="form-label"></label>
            <input type="text" asp-for="UnitPrice" class="form-control">
          </div>
          <div class="form-group">
            <label asp-for="UnitsInStock" class="form-label"></label>
            <input type="text" asp-for="UnitsInStock" class="form-control">
          </div>
          <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label"></label>
            <input  type="file"   name="file" class="form-control" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
          <button asp-action="UpdateOneProduct" asp-controller="Product" asp-area="Admin" type="submit"
            class="btn btn-success">Ürünü
            Güncelle</button>
        </div>
      </form>
    </div>
  </div>
</div>
